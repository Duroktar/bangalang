{
	"editor.insertSpaces": false,
	"tslint.enable": true,
	"typescript.tsc.autoDetect": "off",
	"typescript.preferences.quoteStyle": "single",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
    "files.exclude": {
        "**/node_modules": true,
        "**/out": true,
        "**/dist": true,
        "**/build": true,
    }
}
