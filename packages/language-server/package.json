{
	"name": "bangalang-language-extension",
	"description": "Bangalang Language extension",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "traBpUkciP",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:bangalang",
		"workspaceContains:*.bl"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "bangalang",
				"aliases": [
					"banga"
				],
				"extensions": [
					".bl"
				],
				"configuration": "./syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "bangalang",
				"scopeName": "source.bl",
				"path": "./syntaxes/Bangalang.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
        "vscode:prepublish": "npm run compile",
		"precompile": "rm -rf dist/",
		"develop:compile": "tsc -b",
		"develop:watch": "tsc -b -w",
		"compile": "webpack --mode=production --node-env=production",
		"build:dev": "webpack --mode=development --node-env=development",
		"watch": "webpack --watch",
		"postinstall": "cd client && yarn install && cd ../server && yarn install && cd ..",
		"test": "sh ./scripts/e2e.sh",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/debounce": "^1.2.0",
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"debounce": "^1.2.1",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"ts-loader": "^9.2.4",
		"typescript": "^4.3.2",
		"vsce": "^1.96.1",
		"vscode": "^1.1.37",
		"webpack": "^5.47.1",
		"webpack-cli": "^4.7.2"
	},
	"dependencies": {
		"lru-cache": "^6.0.0",
		"minimatch": "^3.0.4"
	}
}
