// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
        {
            "name": "Debug Bangalang Core (cli.ts)",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/packages/core/src/cli.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}/packages/core",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug Bangalang Core (test.ts)",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/packages/core/src/test.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}/packages/core",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug Bangalang Core (hm-test.ts)",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/packages/core/src/hm-test.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}/packages/core",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug Bangalang Core (test-debugger.ts)",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/packages/core/src/test-debugger.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}/packages/core",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug Bangalang Core (test-parser.ts)",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/packages/core/src/test-parser.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}/packages/core",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Language Server Client",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/packages/language-server"],
			"outFiles": ["${workspaceRoot}/packages/language-server/client/out/**/*.js"],
			"preLaunchTask": "tsc: watch - language-server"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Language Server",
			"port": 6099,
			"restart": true,
			"outFiles": ["${workspaceRoot}/packages/language-server/server/out/**/*.js"]
		},
		{
			"name": "Language Server E2E Test",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/packages/language-server",
				"--extensionTestsPath=${workspaceRoot}/packages/language-server/client/out/test/index",
				"${workspaceRoot}/packages/language-server/client/testFixture"
			],
			"outFiles": ["${workspaceRoot}/packages/language-server/client/out/test/**/*.js"]
		}
	],
	"compounds": [
		{
			"name": "Language Server: Client + Server",
			"configurations": ["Launch Language Server Client", "Attach to Language Server"]
		}
	]
}
