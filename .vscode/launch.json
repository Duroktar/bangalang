// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
        {
            "name": "Debug Core (cli.ts)",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/packages/core/src/cli.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}/packages/core",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Language Server (client)",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/packages/language-server"],
			"outFiles": ["${workspaceRoot}/packages/language-server/client/out/**/*.js"],
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Language Server (server)",
			"port": 6009,
			"restart": true,
			"outFiles": ["${workspaceRoot}/packages/language-server/server/out/**/*.js"]
		},
		{
			"name": "Language Server E2E Test",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/packages/language-server",
				"--extensionTestsPath=${workspaceRoot}/packages/language-server/client/out/test/index",
				"${workspaceRoot}/packages/language-server/client/testFixture"
			],
			"outFiles": ["${workspaceRoot}/packages/language-server/client/out/test/**/*.js"]
		}
	],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": ["Launch Language Server (client)", "Attach to Language Server (server)"]
		}
	]
}
